{
  "manifest_version": 2,
  "name": "Trello Grid Layout",
  "description": "Allow Trello boards to display in a grid.",
  "version": "0.1",
  "author": "Thien Tran",
  "developer": {
    "name": "Thien Tran",
    "url": "https://github.com/gau-nernst"
  },
  "icons": {
    "48": "icon48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "*://trello.com/b/*",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "css/layout.css"
  ],
  "page_action": {
    "default_title": "Trello Grid Layout",
    "default_icon": "icon48.png"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}